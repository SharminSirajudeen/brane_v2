{
  "neuronId": "research_assistant",
  "displayName": "Research Assistant",
  "description": "An AI assistant specialized in research, analysis, and information synthesis",
  "version": "1.0.0",
  "author": "BRANE Team",

  "llm": {
    "providers": [
      {
        "provider": "openai",
        "apiKey": "${OPENAI_API_KEY}",
        "model": "gpt-4o-mini",
        "defaultOptions": {
          "temperature": 0.7,
          "maxTokens": 4096
        }
      },
      {
        "provider": "anthropic",
        "apiKey": "${ANTHROPIC_API_KEY}",
        "model": "claude-3-5-haiku-20241022",
        "defaultOptions": {
          "temperature": 0.7,
          "maxTokens": 4096
        }
      },
      {
        "provider": "ollama",
        "baseUrl": "http://localhost:11434",
        "model": "llama3.2:latest",
        "defaultOptions": {
          "temperature": 0.7,
          "maxTokens": 2048
        }
      }
    ],
    "defaultProvider": "openai",
    "fallbackProviders": ["anthropic", "ollama"],
    "contextStrategy": "smart",
    "maxConversationLength": 50
  },

  "systemPrompt": "You are a highly capable research assistant. Your role is to help users find, analyze, and synthesize information from various sources. You provide accurate, well-researched answers with proper citations when possible. You think critically and present balanced perspectives on complex topics.",

  "axon": {
    "enabled": true,
    "vectorStore": "faiss",
    "embeddingProvider": {
      "provider": "openai",
      "model": "text-embedding-3-small",
      "apiKey": "${OPENAI_API_KEY}",
      "dimensions": 1536
    },
    "storage": {
      "type": "local",
      "path": "./axon_data/research_assistant",
      "syncEnabled": false
    },
    "indexing": {
      "chunkSize": 1000,
      "chunkOverlap": 200,
      "maxDocuments": 5000,
      "autoIndex": true
    },
    "retrieval": {
      "topK": 5,
      "minScore": 0.75,
      "reranking": true,
      "hybridSearch": true
    }
  },

  "synapses": [
    {
      "id": "web_search",
      "enabled": true,
      "config": {
        "maxResults": 10,
        "searchEngines": ["google", "bing", "duckduckgo"]
      }
    },
    {
      "id": "arxiv_search",
      "enabled": true,
      "config": {
        "maxResults": 5
      }
    },
    {
      "id": "wikipedia",
      "enabled": true
    },
    {
      "id": "pdf_reader",
      "enabled": true,
      "permissions": ["read"]
    }
  ],

  "tools": [
    {
      "name": "web_search",
      "enabled": true,
      "requiresConfirmation": false
    },
    {
      "name": "calculator",
      "enabled": true,
      "requiresConfirmation": false
    },
    {
      "name": "code_interpreter",
      "enabled": true,
      "requiresConfirmation": true
    }
  ],

  "runtime": {
    "autoStart": false,
    "restartOnFailure": true,
    "maxMemoryMB": 4096,
    "logging": {
      "level": "info",
      "logToFile": true,
      "logPath": "./logs/research_assistant"
    }
  },

  "ui": {
    "theme": "auto",
    "showSystemMessages": false,
    "showTokenUsage": true,
    "showCosts": true,
    "streamingEnabled": true
  }
}