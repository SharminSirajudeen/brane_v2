# BRANE Backend Configuration

# Application
APP_NAME=BRANE
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://brane:brane_dev_password@localhost:5432/brane_dev

# Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/callback

# Redis (Optional)
REDIS_URL=redis://localhost:6379/0

# Encryption
ENCRYPTION_KEY=your-encryption-key-change-in-production-32-bytes

# Privacy Tiers
DEFAULT_PRIVACY_TIER=0

# File Storage
STORAGE_PATH=./storage
AXON_STORAGE_PATH=./storage/axon
MODELS_PATH=./storage/models

# LLM Providers (Optional - users can configure via UI)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# OLLAMA_BASE_URL=http://localhost:11434

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
